<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/user_top_cl"
                android:layout_width="match_parent"
                android:layout_height="225dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:shape_roundRect_topLeftRadius="40dp"
                    app:shape_roundRect_topRightRadius="40dp"
                    app:shape_roundRect_bottomLeftRadius="40dp"
                    app:shape_roundRect_bottomRightRadius="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:paddingVertical="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#514DB3">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/user_fragment_user_names"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/lato_bold"
                                android:gravity="center_vertical"
                                android:textColor="@color/white"
                                android:textSize="28sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/user_fragment_studentyear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="15dp"
                                android:fontFamily="@font/abcwhyteinktrap_light_trial"
                                android:textColor="@color/white"
                                android:textSize="18sp"
                                android:textStyle="italic"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/user_fragment_user_names" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintLayout6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginStart="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                            tools:layout_editor_absoluteX="10dp">

                            <TextView
                                android:id="@+id/user_fragment_promoyear"
                                android:layout_width="match_parent"
                                android:layout_marginStart="10dp"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/abcwhyteinktrap_regular_trial"
                                android:text="Promo 2024"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent">

                            </TextView>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <io.github.florent37.shapeofview.shapes.RoundRectView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="16sp"
                            android:background="?android:attr/selectableItemBackground"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                            app:shape_roundRect_bottomLeftRadius="18dp"
                            app:shape_roundRect_bottomRightRadius="18dp"
                            app:shape_roundRect_topLeftRadius="18dp"
                            app:shape_roundRect_topRightRadius="18dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/abcwhyteinktrap_regular_trial"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Marks"
                                    android:textColor="#222128"
                                    android:textSize="20sp">

                                </TextView>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/ic_baseline_notes_24">

                                </ImageView>

                            </LinearLayout>
                        </io.github.florent37.shapeofview.shapes.RoundRectView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </io.github.florent37.shapeofview.shapes.RoundRectView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:elevation="8dp"
                    app:cardCornerRadius="30dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email">

                        </TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                <androidx.cardview.widget.CardView
                    android:id="@+id/user_fragment_info_cardview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="8dp"
                    app:cardCornerRadius="30dp">

                    <LinearLayout
                        android:id="@+id/user_fragment_info_cardview_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/constraintLayout3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:fontFamily="@font/abcwhyteinktrap_medium_trial"
                    android:text="Netlog"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/user_fragment_netlog_chart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <com.anychart.AnyChartView
                    android:id="@+id/user_fragment_netlog_anychart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                </com.anychart.AnyChartView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_top_cl">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Flags"
                    android:textSize="22dp"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="6dp"
                    android:textColor="#222128"
                    android:fontFamily="@font/abcwhyteinktrap_bold_trial">

                </TextView>

                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_marginHorizontal="30dp"
                    app:shape_roundRect_bottomRightRadius="30dp"
                    app:shape_roundRect_topRightRadius="30dp"
                    app:shape_roundRect_bottomLeftRadius="30dp"
                    app:shape_roundRect_topLeftRadius="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F9F9F9">


                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_ghost"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="14dp"
                            android:orientation="vertical"
                            android:paddingVertical="18dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView2"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/user_fragment_ghost_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#1D1D26"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/abcwhyteinktrap_bold_trial"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp"
                                android:text="Ghost"/>

                            <TextView
                                android:id="@+id/user_fragment_ghost_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </io.github.florent37.shapeofview.shapes.RoundRectView>
                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_marginHorizontal="30dp"
                    app:shape_roundRect_bottomRightRadius="30dp"
                    app:shape_roundRect_topRightRadius="30dp"
                    app:shape_roundRect_bottomLeftRadius="30dp"
                    app:shape_roundRect_topLeftRadius="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F9F9F9">


                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_life_preserver"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="14dp"
                            android:orientation="vertical"
                            android:paddingVertical="18dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView3"
                            app:layout_constraintStart_toEndOf="@+id/imageView1"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/user_fragment_rescue_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#1D1D26"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/abcwhyteinktrap_bold_trial"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp"
                                android:text="Rescue"/>

                            <TextView
                                android:id="@+id/user_fragment_rescue_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </io.github.florent37.shapeofview.shapes.RoundRectView>
                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_marginHorizontal="30dp"
                    app:shape_roundRect_bottomRightRadius="30dp"
                    app:shape_roundRect_topRightRadius="30dp"
                    app:shape_roundRect_bottomLeftRadius="30dp"
                    app:shape_roundRect_topLeftRadius="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F9F9F9">


                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_thumbs_up"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="14dp"
                            android:orientation="vertical"
                            android:paddingVertical="18dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView6"
                            app:layout_constraintStart_toEndOf="@+id/imageView5"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/user_fragment_encouragement_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#1D1D26"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/abcwhyteinktrap_bold_trial"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp"
                                android:text="Encouragement"/>

                            <TextView
                                android:id="@+id/user_fragment_encouragement_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </io.github.florent37.shapeofview.shapes.RoundRectView>
                <io.github.florent37.shapeofview.shapes.RoundRectView
                    android:layout_marginHorizontal="30dp"
                    app:shape_roundRect_bottomRightRadius="30dp"
                    app:shape_roundRect_topRightRadius="30dp"
                    app:shape_roundRect_bottomLeftRadius="30dp"
                    app:shape_roundRect_topLeftRadius="30dp"
                    android:layout_marginVertical="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F9F9F9">


                        <ImageView
                            android:id="@+id/imageView7"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:background="@drawable/ic_medal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="14dp"
                            android:orientation="vertical"
                            android:paddingVertical="18dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView8"
                            app:layout_constraintStart_toEndOf="@+id/imageView7"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/user_fragment_medal_title"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:textColor="#1D1D26"
                                android:textSize="18sp"
                                android:layout_weight="1"
                                android:fontFamily="@font/abcwhyteinktrap_bold_trial"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp"
                                android:text="Medal"/>

                            <TextView
                                android:id="@+id/user_fragment_medal_text"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingHorizontal="10dp" />
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/ic_baseline_arrow_drop_down_24"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                        </ImageView>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </io.github.florent37.shapeofview.shapes.RoundRectView>

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

                <Button
                    android:id="@+id/user_fragment_marks_button"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:backgroundTint="@color/intra_primary"
                    android:fontFamily="@font/lato_regular"
                    android:text="@string/see_marks"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                </Button>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>