<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntraEpitechAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/intra_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:listPopupWindowStyle">@style/PopupMenuRounded</item>
        <item name="android:popupWindowStyle">@style/PopupMenuRounded</item>
        <item name="android:popupMenuStyle">@style/PopupMenuRounded</item>
    </style>

    <style name="Theme.IntraEpitechAndroid.DIP" parent="Theme.IntraEpitechAndroid">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:listPopupWindowStyle">@style/PopupMenuRounded</item>
        <item name="android:popupWindowStyle">@style/PopupMenuRounded</item>
        <item name="android:popupMenuStyle">@style/PopupMenuRounded</item>
    </style>

    <style name="Theme.IntraEpitechAndroid.SecondaryTheme" parent="Theme.IntraEpitechAndroid">
        <item name="colorPrimaryVariant">#E3EBF3</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PopupMenuRounded" parent="Widget.MaterialComponents.PopupMenu.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_background</item>
        <item name="android:actionBarTabTextStyle">@style/HomeSubtitleText</item>
    </style>

    <style name="Theme.IntraEpitechAndroid.header_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/lato_light</item>
    </style>

    <style name="HomeBoxNumber" parent="Widget.AppCompat.TextView">
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/lato_black</item>
    </style>

    <style name="HomeBox" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">14dp</item>
        <item name="elevation">20dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:longClickable">true</item>
    </style>

    <style name="HomeBoxTitle" parent="Widget.AppCompat.TextView">
        <item name="android:paddingBottom">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/lato_regular</item>
    </style>

    <style name="HomeTabView" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabIndicator">@color/black</item>
    </style>

    <style name="HomeSubtitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="fontFamily">@font/lato_regular</item>
    </style>

    <style name="TransparentScroll" parent="Theme.IntraEpitechAndroid">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:colorEdgeEffect">@android:color/transparent</item>
    </style>

    <style name="CustomCardCorners" parent="CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">4dp</item>
        <item name="cornerSizeTopRight">4dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
    </style>

</resources>